<% include ./partials/head %>

<div class='ui main text container segment'>
    <div class = 'ui huge header'>Edit <%=blog.title%></div>
    <form class = 'ui form' action = '/blogs/<%=blog._id%>?_method=PUT' method = 'POST'>
        <div class = 'field'>
            <lable>Title</lable>
            <input type = 'text' name = 'blog[title]' value = '<%=blog.title%>'>
        </div>
        <div class = 'field'>
            <lable>Image</lable>
            <input type = 'text' name = 'blog[img]' value = '<%=blog.img%>'>
        </div>
        <div class = 'field'>
            <lable>Blog content</lable>
            <textarea name = 'blog[body]'><%=blog.body%></textarea>
            <!--<input type = 'text' name = 'blog[body]' placeholder = 'Content'>-->
        </div>
        
        <input class = 'fluid ui violet basic button' type = 'submit'>
    </form>
</div>

<% include ./partials/footer %>